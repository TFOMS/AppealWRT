<mapping>
	<class name="service.xml.model.Security">
	
		<map-to xml="user" />
 
		<field name="name" type="string">
			<bind-xml name="name" node="attribute" />
		</field>
		
		<field name="password" type="string">
			<bind-xml name="password" node="attribute" />
		</field>
		
		<field name="authorities" type="string">
			<bind-xml name="authorities" node="attribute" />
		</field>
 
	</class>
</mapping>